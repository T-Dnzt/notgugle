%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= site_title(yield(:title))
    %meta{:content => "notGugle is clearly not the Google search engine !", :name => "description"}
    %meta{:content => "T.Denizet, S.Bonnard, S.Zenatti", :name => "author"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = render 'layouts/shim'
    = yield(:head)
  %body
    = render 'layouts/navigation'
    .container
      = yield
      = render 'layouts/footer'

- provide(:title, 'Home')
.center.hero-unit
  - unless @results
    %img{ :title => "notGugle", :src => "assets/logo.png", :border => "0", :alt => "logo", :class => "logo"  }
  :javascript
    $(function() {
      $('#search').val("#{params[:search]}");
      $("input:text:visible:first").focus();
    });
  = form_tag(root_path, :id => "searchbox") do
    = text_field_tag "search", "", :placeholder => "Type here", :id => "search"
    = submit_tag("Search", :id => "submit")
  - if @results
    - if @results.length > 0
      %small= "#{@results['pages'].count} #{pluralize_stats(@results["pages"].count)} en #{(@results['timer'] - 0.0005).round(3)} s"
      #list_results
        %ol
          - @results["pages"].each do |result|
            %li
              = link_to get_title("#{Rails.root.join('public')}/html/#{result['filename']}"), "html/#{result['filename']}"
              \(
              = link_to result['filename'], "html/#{result['filename']}"
              \- poids #{(result['weight'] - 0.0005).round(1)})
              %ol
                %li
                  = @results["desc_pages"].has_key?(result['filename']) ? @results["desc_pages"][result['filename']] : "no description"
                = "Correspondances dans cette page : #{result["words"].join(', ')}"
              %br/
              %br/
      - else
        #list_results
          %p No result found.
          :javascript
         
